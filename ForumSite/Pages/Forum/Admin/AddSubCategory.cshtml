@page
@model ForumSite.Pages.Forum.Admin.AddSubCategoryModel
@{
}

<h2>SubCategories</h2>
<hr />

<table class="table">
    <thead>
    <tr>
        <th><h3>@Model.Title</h3></th>
    </tr>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var subcategory in Model.SubCategories)
        {
            <tr>
                <td>@subcategory.Id</td>
                <td>@subcategory.Title</td>
                <td>@subcategory.Description</td>
                <td align="right">
                    <div>
                        <a asp-page="" asp-route-id="@subcategory.Id" class="btn btn-primary font-weight-bold">Edit</a>
                        <a asp-page="Delete" asp-route-id="@subcategory.Id" class="btn btn-danger font-weight-bold">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>



