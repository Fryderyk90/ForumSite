@page
@model ForumSite.Pages.Forum.SendPersonalMessageModel
@{
}
<h1>PM to @Model.ToUser</h1>

<form method="post">
    <div class="input-group flex-nowrap">
        <span class="input-group-text" id="addon-wrapping">Description</span>
        <input type="text" asp-for="@Model.Input" class="form-control" placeholder="Description" aria-label="Title" aria-describedby="addon-wrapping">
    </div>
    <hr />
    <div class="btn-group" role="group">
        <button type="submit" class="btn btn-danger">Send</button>
        <a asp-page="./Index" class="btn btn-primary">Back</a>
    </div>
</form>