@page
@using Microsoft.AspNetCore.Identity
@using _9Chan.Core.Models
@inject SignInManager<User> SignInManager
@model ForumSite.Pages.Forum.PostModel
@{
}
@foreach (var post in Model.NewPosts)
{
    <img src="@post.ProfilePicture" height="80" width="80" />
    <h6>@post.UserName</h6>
    <p style="float: right;">@post.DatePosted</p>
    <p>@post.PostText</p>
    <div class="btn-group" role="group">
        @if (SignInManager.IsSignedIn(User))
        {
            <p align="right"><a asp-route-id="@post.PostId" asp-route-username="@post.UserName" asp-route-post="@post.PostText" asp-page="ConfirmReport">Report</a></p>
            <p align="right"><a asp-route-id="@post.UserId" asp-route-username="@post.UserName" asp-page="SendPersonalMessage">PM</a></p>
        }
    </div>
    <hr />
    <div>
        <h5>Replies</h5>
        @for (int i = 0; i < @post.Comments.ToArray().Length; i++)
        {
            <p>@post.Comments[i].User.UserName</p>
            <p>@post.Comments[i].CommentText</p>
            <hr />
        }
        <hr />


    </div>


}

@if (SignInManager.IsSignedIn(User))
{
    <h3>Create New Post</h3>
    <form method="post">
        <div class="input-group flex-nowrap">
            <span class="input-group-text" id="addon-wrapping">Title</span>
            <input type="text" asp-for="@Model.InputPost.InputText" class="form-control" placeholder="Title" aria-label="Title" aria-describedby="addon-wrapping">
        </div>

        <hr />

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
}


@foreach (var post in Model.NewPosts)
{
    <div class="card mb-3" style="max-width: 100%;">
        <div class="row g-0">
            <div class="col-md-2">
                <img src="@post.ProfilePicture" height="140" width="150" alt="..." style="
        border-top: 3px solid black;
        border-bottom: 3px solid black;
        border-right: 3px solid black;
        border-left: 3px solid black;
    " />
            </div>
            <div class="col-md-10">
                <div class="card-body">
                    <h5 class="card-title">@post.UserName</h5>
                    <p class="card-text">@post.PostText</p>
                </div>
            </div>

        </div>
        <div class="card-footer">


            <div class="btn-group" role="group" align="left">
                @if (SignInManager.IsSignedIn(User))
                {
                    <p align="right"><a asp-route-id="@post.PostId" asp-route-username="@post.UserName" asp-route-post="@post.PostText" asp-page="ConfirmReport">Report</a></p>
                    <p align="right"><a asp-route-id="@post.UserId" asp-route-username="@post.UserName" asp-page="SendPersonalMessage">PM</a></p>
                }
            </div>


            <div align="right">
                <p class="card-text"><small class="text-muted">Posted: @post.DatePosted</small></p>
            </div>

        </div>
        <div id="accordion">
            <div class="card">
                <div class="card-header" id="headingOne">
                    <h5 class="mb-0">
                        <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            Replies #@post.Comments.Where(p => p.PostId == @post.PostId).Count()
                        </button>
                    </h5>
                </div>

                <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                    @for (int i = 0; i < @post.Comments.ToArray().Length; i++)
                    {
                        <div class="card-body" id="1">


                            <p>@post.Comments[i].User.UserName</p>
                            <p>@post.Comments[i].CommentText</p>
                            <hr />

                        </div>
                    }
                    <div class="card-body" id="1">
                        <form method="post" asp-page-handler="Reply">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="CommentInput.CommentText" class="control-label"></label>
                                <input asp-for="CommentInput.CommentText" class="form-control" />
                                <span asp-validation-for="CommentInput.CommentText" class="text-danger"></span>

                            </div>

                            <div class="form-group">

                                <input type="submit" asp-page-handler="Reply" asp-route-postId="@post.PostId" asp-route-threadId="@post.ThreadId" class="btn btn-primary" />
                            </div>
                        </form>


                        <hr />

                    </div>

                </div>



            </div>
        </div>
    </div>

