@page
@model ForumSite.Pages.Forum.SubCategoriesModel
@{
}

<table class="table">
    <tr>
        <th>Title</th>
        <th>Description</th>
    </tr>
    @foreach (var subCategory in Model.SubCategories)
    {
        <tr>
            <td><a asp-route-id="@subCategory.Id" asp-page="./Threads">@subCategory.Title</a></td>
            <td>@subCategory.Description</td>
        </tr>
    }
</table>
